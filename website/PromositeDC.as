package{	/**	 * Imports	 **/	import be.arnordhaenens.context.PromositeContext;	import be.arnordhaenens.services.HelloService;		import flash.display.DisplayObjectContainer;	import flash.display.Sprite;	import flash.display.StageAlign;	import flash.display.StageDisplayState;	import flash.display.StageScaleMode;	import flash.events.Event;	import flash.system.Security;		import nl.demonsters.debugger.MonsterDebugger;
		/**	 * Class	promosite.as	 * @author	D'Haenens Arnor	 **/	public class PromositeDC extends Sprite	{		/**		 * Variables		 **/		private var context:PromositeContext;		private var debug:MonsterDebugger;				public static var state:String;		public static var uid:String;		public static var token:String;				/**		 * Constructor		 **/		public function PromositeDC()		{			Security.allowDomain("http://api.twitter.com");			Security.allowDomain("http://twitter.com");			Security.allowDomain("twitter.com");			Security.allowDomain("api.twitter.com");						super();						//add event listener			if(stage)				init();			else				this.addEventListener(Event.ADDED_TO_STAGE, init);						//call init function			//init();		}				/**		 * Init function		 **/		private function init(evt:Event=null):void		{			//removeEventListener			if(this.hasEventListener(Event.ADDED_TO_STAGE))				this.removeEventListener(Event.ADDED_TO_STAGE, init);						//set the stage basics			setStageBasics();						//set the context			context = new PromositeContext(this);						//set up monsterdebugger			debug = new MonsterDebugger(this);		}				/**		 * Set the stage basics		 **/		private function setStageBasics():void		{			/**			 * Set the scale mode			 * Set the alignment			 * Set the display state			 **/			this.stage.scaleMode = StageScaleMode.NO_SCALE;			this.stage.align = StageAlign.TOP_LEFT;			this.stage.displayState = StageDisplayState.NORMAL;		}	}}